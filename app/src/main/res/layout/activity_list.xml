<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity">


    <Button
        android:id="@+id/bt_out"
        android:layout_width="207dp"
        android:layout_height="77dp"
        android:layout_marginEnd="112dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:fontFeatureSettings="20.sp"
        android:text="Fit Care"
        android:textAllCaps="false"
        android:textColor="#67CEDC"
        android:textSize="50sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/lv_list"
        app:layout_constraintEnd_toStartOf="@+id/bt_listreg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <ListView
        android:id="@+id/lv_list"
        android:layout_width="399dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bt_out"
        app:layout_constraintTop_toBottomOf="@+id/bt_out" />

    <Button
        android:id="@+id/bt_listreg"
        android:layout_width="72dp"
        android:layout_height="0dp"
        android:background="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="@+id/bt_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt_out"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
